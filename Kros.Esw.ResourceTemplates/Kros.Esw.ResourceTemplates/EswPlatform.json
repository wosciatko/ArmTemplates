{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
    "parameters": {
        "stage": {
            "type": "string"
        }
    },
    "variables": {
        "baseTemplateUri": "https://raw.githubusercontent.com/wosciatko/ArmTemplates/master/Kros.Esw.ResourceTemplates/Kros.Esw.ResourceTemplates/",
        "serviceApiUri": "[concat(variables('baseTemplateUri'), 'ServiceApi.json')]",
        "servicePlanUri": "[concat(variables('baseTemplateUri'), 'ServicePlan.json')]",
        "sqlServerUri": "[concat(variables('baseTemplateUri'), 'SqlServer.json')]",

        "servicePlanName": "[concat('esw-', parameters('stage'), '-asp')]",
        "sqlServerName": "[concat('esw-', parameters('stage'), '-sql')]",
        "sqlServerAdminUserName": "krosdbadmin",
        "sqlServerAdminPassword": "testpassword12345"


    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-11-01",
            "name": "[variables('servicePlanName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('servicePlanUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "servicePlanName": { "value": "[variables('servicePlanName')]" }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-11-01",
            "name": "InvoicingApi",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('serviceApiUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "apiName": { "value": "invoicing" },
                    "stage": { "value": "[parameters('stage')]" },
                    "slotName": { "value": "development" },
                    "servicePlanId": { "value": "[resourceId('Microsoft.Web/serverfarms', variables('servicePlanName'))]" }
                }
            },
            "dependsOn": [
                "[variables('servicePlanName')]"
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-11-01",
            "name": "[variables('sqlServerName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('sqlServerUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serverName": { "value": "[variables('sqlServerName')]" },
                    "administratorLogin": { "value": "[variables('sqlServerAdminUserName')]" },
                    "administratorLoginPassword": { "value": "[variables('sqlServerAdminPassword')]" }
                },
            "dependsOn": [
                "[variables('servicePlanName')]"
            ]
        }
    ],
  "outputs": {}
}
